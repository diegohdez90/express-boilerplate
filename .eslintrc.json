{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            2,
            2,
            {   
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": "error",
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "arrow-parens": [
            "error",
            "always"
        ],
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "space-before-function-paren": ["error", "never"],
        "no-console": 1,
        "handle-callback-err": 0,
        "node/no-unsupported-features/es-syntax": 0,
        "node/no-unpublished-import": 0,
        "node/no-unpublished-require": ["error", {
            "allowModules": ["webpack"]
        }]
    }
}
